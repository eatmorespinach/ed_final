

= form_for @listing do |f|
  - if @listing.errors.any?
    .alert.alert-error
      - for message in @listing.errors.full_messages
        %p= message
  .span.offset3
    .field
      = f.label :title
      = f.text_field :title
    %br
    .field
      = f.label :city
      = f.text_field :city
    %br
    .field
      = f.label :description
      = f.text_area :description
    %br
    .field
      = f.label :number_of_guests
      = f.number_field :guests
    %br
    .field
      = f.label :stay_length
      = f.text_field :stay_length
    %br
    .field
      = f.label :country
      = f.country_select :country
    %br
    .actions
      = f.submit "List Hosting", :class => "btn btn-info"
