

= form_for @listing do |f|
  - if @listing.errors.any?
    .alert.alert-error
      - for message in @listing.errors.full_messages
        %p= message
  .span.offset3
    .field
      = f.label :title
      %br
      = f.text_field :title
    .field
      = f.label :city
      = f.text_field :city
    .field
      = f.label :description
      %br
      = f.text_area :description
    .field
      = f.label :number_of_guests
      %br
      = f.number_field :guests
    .field
      = f.label :stay_length
      = f.text_field :stay_length
    .field
      = f.label :country
      = f.country_select :country
    .actions
      = f.submit "List Hosting"
