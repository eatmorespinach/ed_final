= render 'shared/errors', f: @listing
= form_for @listing do |f|
  %br
  .span.offset2
    .field
      = f.label :title
      = f.text_field :title, :class => "wider-input", placeholder: "e.g. Teach Me Ruby on Rails"
    %br
    .field
      = f.label :city
      = f.text_field :city, placeholder: "e.g. Toronto"
    %br
    .field
      = f.label :description
      = f.text_area :description, :class => "wider-input taller-input"
    %br
    .field
      = f.label :number_of_guests
      = f.number_field :guests, :class => "number-input", placeholder: "e.g. 2"
    %br
    .field
      = f.label :stay_length
      = f.text_field :stay_length, :class => "wider-input", placeholder: "e.g. Three or four weeks"
    %br
    .field
      = f.label :country
      = f.country_select :country, placeholder: "e.g. Canada"
    %br
    .actions
      = f.submit "List Hosting", :class => "btn btn-info"
