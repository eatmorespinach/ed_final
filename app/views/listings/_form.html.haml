= form_for @listing, :html => { :multipart => true} do |f|
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :number_of_guests
    %br
    = f.number_field :guests

  .field
    = f.label :stay_length
    = f.text_field :stay_length
  .field
    = f.label :file
    = f.file_field :file
  .actions
    = f.submit
