- content_for :title do
  = "Hostings"

.row-fluid
  .span4
    %h1 Hostings
  .span6.pull-right.pad-top
    = search_form_for @search, :class => "zero-margin" do |f|
      .field
        = f.select :country_eq, options_for_select(@countries, "")
        = f.text_field :title_or_description_or_city_or_country_or_stay_length_or_in_exchange_cont, placeholder: "Search..."
     


.listings
  - @listings.each do |listing|
    .individual-listing
      .row-fluid
        .span12
          %h3= link_to listing.title, listing_path(listing)  
          %h4= listing.city + ", " + listing.country

          .row-fluid
            .span4
              = link_to listing_path(listing), :class => "center" do
                - if listing.assets.empty?
                  = image_tag("default_listing_image.gif") 
                - else
                  = image_tag(listing.assets.first.file_url(:thumb))
            .span2.avatar-box
              = link_to listing_path(listing) do
                - if listing.user.profile.assets.empty?
                  = image_tag("default_avatar_image.gif")
                - else 
                  = image_tag(listing.user.profile.assets.order("state ASC").first.file_url(:avatar))
                    
                  
              .description-box 
                %p Host: <strong> #{listing.user.first_name} </strong>
                %p Guests: <strong> #{listing.guests} </strong>

            .span6

              %p= listing.description.truncate(620)
              
