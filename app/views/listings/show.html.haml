- content_for :title do
  = "#{@listing.title}" 

=flash[:notice]

.row-fluid
  .span12
    %h2= @listing.title
    %h4= @listing.city 
    %h4= @listing.country
    .row-fluid
      .span5
        = render "listing_image"
        %br
        = link_to "Manage Images", listing_lis_images_path(@listing)
        = link_to "Edit Listing", edit_listing_path(@listing)


      .span7
        %p= @listing.description
        %br
        %br
        %h4 Reviews
        - @listing.reviews.each do |review|
          - if !review.new_record?
            %p
              = review.description
              - (review.rating).times do
                = image_tag ('http://upload.wikimedia.org/wikipedia/en/e/e7/Tiny_Star.gif') 
        %br
        %br
        %br
        %br
        %h4 Create new Review
        = form_for([@listing, @review]) do |f|
          .field
            =f.label :description
            %br
            =f.text_area :description
          .field
            =f.label :"rating (1 to 5)"
            %br
            =f.number_field :rating
          .actions
            =f.submit