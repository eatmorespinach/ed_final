=flash[:notice]

%h2= @listing.title

%p= @listing.description

/ =image_tag @listing.image_url.to_s

%p Guests: #{@listing.guests}

%p #{@listing.stay_length}

%h4 Reviews

- @listing.reviews.each do |review|

  %p= review.description
  %br

%h4 Create new Review

= form_for([@listing, @review]) do |f|
  .field
    =f.label :description
    %br
    =f.text_area :description
  .actions
    =f.submit