- content_for :title do
  = "#{@listing.title}" 


.row-fluid
  .span12
    %h2= @listing.title
    %h4= @listing.city 
    %h4= @listing.country
    .row-fluid
      .span5

        %div{:id=> "myCarousel", :class=> "carousel slide"}
          .carousel-inner.bob
            - if @listing.lis_images.empty?
              .item.active
                = image_tag("default_listing_image.gif")
            - else
              - @listing.lis_images.each do |picture|
                - if picture == @listing.lis_images.first
                  .item.active
                    = link_to image_tag(picture.file_url(:thumb), :class => "center"), listing_lis_image_path(@listing, picture)                
                - else
                  .item
                    = link_to image_tag(picture.file_url(:thumb), :class => "center"), listing_lis_image_path(@listing, picture)
          %a{:class => "carousel-control left", :href => "#myCarousel", :"data-slide"=>"prev"} &lsaquo;
          %a{:class => "carousel-control right", :href => "#myCarousel", :"data-slide"=>"next"} &rsaquo;

        - if @listing.user == current_user    
          %br
          .btn= link_to "Manage Images", listing_lis_images_path(@listing)
          .btn= link_to "Edit Listing", edit_listing_path(@listing)

      .span7
        %p= @listing.description
        %br
        %br
        %h4 Reviews
        - @listing.reviews.each do |review|
          - if !review.new_record?
            %p
              = review.description
              - (review.rating).times do
                = image_tag ('http://upload.wikimedia.org/wikipedia/en/e/e7/Tiny_Star.gif') 
        %br
        %br
        %br
        %br
        %h4 Create new Review
        = form_for([@listing, @review]) do |f|
          .field
            =f.label :description
            %br
            =f.text_area :description
          %br
          .field
            =f.label :"rating (1 to 5)"  
            =f.number_field :rating
          .actions
            =f.submit