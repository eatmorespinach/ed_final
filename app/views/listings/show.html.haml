- content_for :title do
  = "#{@listing.title}" 


.row-fluid
  .span12
    %h1= @listing.title
    %h3.graytext= @listing.city + ", " + @listing.country
    .row-fluid
      .span5
        %div{:id=> "myCarousel", :class=> "carousel slide"}
          .carousel-inner.static_height
            - if @listing.assets.empty?
              .item.active
                = image_tag(("default_listing_image.gif"), :class => "center")
            - else
              - @listing.assets.each do |picture|
                - if picture == @listing.assets.first
                  .item.active
                    = link_to image_tag(picture.file_url(:thumb), :class => "center"), listing_lis_image_path(@listing, picture)                
                - else
                  .item
                    = link_to image_tag(picture.file_url(:thumb), :class => "center"), listing_lis_image_path(@listing, picture)
          %a{:class => "carousel-control left", :href => "#myCarousel", :"data-slide"=>"prev"} &lsaquo;
          %a{:class => "carousel-control right", :href => "#myCarousel", :"data-slide"=>"next"} &rsaquo;

        - if @listing.user == current_user    
          %br
          .btn= link_to "Manage Images", listing_assets_path(@listing)
          .btn= link_to "Edit Listing", edit_listing_path(@listing)

      .span7
        %p= @listing.description
        %br
        %br
        
        - if !@listing.reviews.first.new_record?
          %h3.graytext Reviews
          
        - @listing.reviews.each do |review|
          - if !review.new_record?
            %p
              = review.description
              - (review.rating).times do
                = image_tag ('http://upload.wikimedia.org/wikipedia/en/e/e7/Tiny_Star.gif') 
        %br
        %br
        %br
        %br
        %h4.graytext Create new Review
        = form_for([@listing, @review]) do |f|
          .field
            %br
            =f.label :description
            =f.text_area :description
          %br
          .field
            =f.label :"rating (1 to 5)"  
            =f.number_field :rating
          .actions= f.submit "Create Review", :class => "btn btn-info"