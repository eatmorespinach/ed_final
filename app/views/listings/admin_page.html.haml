%h1 Admin Page
%br
%br
%table.table
  %thead
    %tr
      %th User
      %th Listing Title
      %th Listing State 
      %th Listing Actions
  - @listings.each do |listing|
    %tbody
      %tr
        %td 
          = listing.user.email
        %td
          = listing.title
        %td
          = listing.state
        %td
          = link_to approve_listing_path(listing), method: :post do 
            .btn approve
          = link_to deactivate_listing_path(listing), method: :post do 
            .btn deactivate
          = link_to reactivate_listing_path(listing), method: :post do 
            .btn reactivate


