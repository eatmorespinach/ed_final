- content_for :title do
  = "Contact #{@profile.first_name}" 

%h1 Contact #{@profile.first_name}

= form_for([@profile, @message], url: profile_contact_path(@profile)) do |f|
  .span.offset3  
    .field
      = f.label :subject
      = f.text_field :subject
      %br
      %br
    .field
      = f.label :body
      = f.text_area :body
    .actions
      = f.submit "Send Message", :class=> "btn btn-info"