%h1 Images
= link_to "Add Image", [:new, @assetable, :asset]
= form_tag profile_assets_path(@assetable), :method => :put
  - @assets.each do |asset|
    %br
    = radio_button_tag :select, asset.id
    = link_to image_tag(asset.file_url(:thumb)), profile_asset_path(@assetable, asset)
    = link_to [@assetable, asset], method: :delete, data: { confirm: "Are you sure you want to delete this image?" } do
      .label.label-important X
    .actions
      = submit_tag "Select Default Image"

