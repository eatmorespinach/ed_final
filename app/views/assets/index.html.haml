%h1 Images
%h5 Click on images for full size and to crop.
= link_to "Back", :back
= link_to "Add Image", [:new, @assetable, :asset], :class => "btn"
%br
= form_tag [@assetable, :assets], :method => :put do
  - @assets.each do |asset|
    %br
    = radio_button_tag :selected, asset.id, asset.active?
    = link_to image_tag(asset.file_url(:thumb)), [@assetable, asset] 
    = link_to [@assetable, asset], method: :delete, data: { confirm: "Are you sure you want to delete this image?" } do
      .label.label-important X
    
    %br
    %br  
  .actions
    - if @assets.count > 1
      = submit_tag "Select Default Image", :class => "btn btn-info"

