.navbar
  .navbar-inner
    #container.container
      / .btn-navbar is used as the toggle for collapsed navbar content
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      / Be sure to leave the brand out there if you want it shown
      %a.brand{:href => "/"} StayTraders
      =image_tag("logo.gif", size: "40x40")
      
      / Everything you want hidden at 940px or less, place within here
      .nav-collapse.collapse
        %ul.nav.pull-right
          - if current_user
            %li= link_to "Hostings", listings_path
            %li= link_to "Guests", listings_path
            %li= link_to "Add your space", new_listing_path
            %li.dropdown
              %a.dropdown-toggle{ :"data-toggle"=>'dropdown', :href =>'#'} #{current_user.first_name}
              %ul.dropdown-menu{ :role => 'menu', :"aria-labelledby"=>"dLabel"}
                %li= link_to "Profile", myprofile_path
                %li= link_to "Log out", session_path('current'), method: :delete
          - else
            %li=link_to "Sign Up", signup_path
            %li=link_to "Log In", login_path


