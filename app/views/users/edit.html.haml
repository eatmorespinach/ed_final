- content_for :title do
  = "Edit Profile" 

%h1 Edit your profile
= render 'shared/errors', f: current_user

= form_for(current_user) do |f|
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field  
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit "Save Changes", :class => "btn btn-info"