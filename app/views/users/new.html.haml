  
.span.offset3
  %h1 Sign Up
  = form_for @user do |f|
    - if @user.errors.any?
      .alert.alert-error
        - for message in @user.errors.full_messages
          %p= message
    .field
      = f.label :first_name
      = f.text_field :first_name
    .field  
      = f.label :last_name
      = f.text_field :last_name
    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :password
      = f.password_field :password
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation
    .actions= f.submit "Sign Up"